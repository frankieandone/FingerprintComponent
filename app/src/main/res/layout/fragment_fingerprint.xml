<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".FingerprintFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="@drawable/background_rounded_corners"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SigninTitleStyle"
                />
        <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SigninSubtitleStyle"
                />
        <one.and.frankie.fingerprintcomponent.CircleImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                style="@style/SigninFingerprintIconStyle"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SigninAlternativeActionStyle"
                />
    </LinearLayout>
</FrameLayout>